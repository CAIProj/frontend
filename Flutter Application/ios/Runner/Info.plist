<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
    "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- Lokalisierung, Name, Version etc. -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>

    <!-- iOS-spezifische Einstellungen -->
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- Berechtigungen für Standort -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Die App benötigt Zugriff auf den Standort, um Latitude, Longitude und Höhe anzuzeigen.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Die App benötigt kontinuierlichen Zugriff auf Ihren Standort, um Tracking-Daten zu erfassen.</string>

    <!-- Berechtigung für Motion (für Barometer bzw. Höheninformationen) -->
    <key>NSMotionUsageDescription</key>
    <string>Die App benötigt Zugriff auf den barometrischen Höhensensor des iPhones, um präzise Höhenänderungen anzuzeigen.</string>

    <!-- Hintergrundmodus: Standortupdates im Hintergrund -->
    <key>UIBackgroundModes</key>
    <array>
      <string>location</string>
    </array>

    <key>UIFileSharingEnabled</key><true/>
    <key>LSSupportsOpeningDocumentsInPlace</key><true/>
    
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Diese App benötigt Zugriff auf deinen Standort, um GPS-Tracking aufzuzeichnen.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Diese App benötigt Zugriff auf deinen Standort im Hintergrund, um GPS-Tracking aufzuzeichnen.</string>
    <key>NSLocationAlwaysUsageDescription</key>
    <string>Diese App benötigt Zugriff auf deinen Standort im Hintergrund, um GPS-Tracking aufzuzeichnen.</string>
    <key>UIBackgroundModes</key>
    <array>
        <string>location</string>
    </array>
    <!-- Standard-Storyboard -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIMainStoryboardFile</key>
    <string>Main</string>
    
    <!-- Unterstützte Interface-Orientierungen -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
      <string>UIInterfaceOrientationPortrait</string>
      <string>UIInterfaceOrientationLandscapeLeft</string>
      <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
      <string>UIInterfaceOrientationPortrait</string>
      <string>UIInterfaceOrientationPortraitUpsideDown</string>
      <string>UIInterfaceOrientationLandscapeLeft</string>
      <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
  	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>UIFileSharingEnabled</key>
	<true/>
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<true/>
</dict>
</plist>
